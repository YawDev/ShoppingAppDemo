
@using Shopper.App.Models;
@model List<OrderModel>
@{
    ViewData["Title"] = "View Orders";
}
@if(Model.Count > 0)
{
 <table class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col">First</th>
      <th scope="col">Last</th>
      <th scope="col">Shipping Address</th>
      <th scope="col">Total</th>
          
      <th scope="col"></th>


    </tr>
  </thead>
  <tbody>

    @foreach (var order in Model)
    {
    <tr>
      <td>@order.FirstName</td>
      <td>@order.LastName</td>
      <td>@order.ShippingAddress.Addressline1, @order.ShippingAddress.State,  @order.ShippingAddress.Zipcode,  @order.ShippingAddress.Country</td>
      <td>$@order.Total</td>

    </tr>
        }
  </tbody>
</table>
}
else
{
  <p>No orders made.</p>
}